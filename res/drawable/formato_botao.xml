<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="@color/amarelo"/>
            <stroke
                android:width="0dp"
                
                android:color="@color/azul_escuro"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
       <shape>
            <gradient
                android:startColor="@color/preto"
                android:centerColor="@color/cinza_escuro"
                android:endColor="@color/cinza"
                android:angle="90" />
            <stroke
                android:width="0dp"
                android:color="@color/branco" /> 
            <corners
                android:radius="0dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/cinza" 
                android:endColor="@color/cinza"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/azul_escuro"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
</selector>